<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="@string/confirm_choice"
        android:layout_marginVertical="15dp"
        android:textColorHint="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/outputNameSecondName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:gravity="center"
        android:hint="@string/name_and_secondname"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirm" />

    <TextView
        android:id="@+id/outputGraphicCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginVertical="15dp"
        android:hint="@string/GraphicCards"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/outputNameSecondName"
        tools:layout_editor_absoluteX="50dp" />

    <TextView
        android:id="@+id/outputMonitor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="@string/monitor"
        android:layout_marginVertical="15dp"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/outputGraphicCard"
        tools:layout_editor_absoluteX="45dp" />

    <TextView
        android:id="@+id/outputOperationSystem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:gravity="center"
        android:hint="@string/operation_system"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/outputPeriphery" />

    <TextView
        android:id="@+id/outputPeriphery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:gravity="center"
        android:hint="@string/periphery"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/outputMonitor"
        tools:layout_editor_absoluteX="32dp" />

    <TextView
        android:id="@+id/outputPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="@string/phone_number"
        android:layout_marginVertical="15dp"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/outputOperationSystem" />

    <Button
        android:id="@+id/buttonConfirmOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:text="@string/confirm_order"
        app:layout_constraintTop_toBottomOf="@+id/outputPhoneNumber"
        tools:layout_editor_absoluteX="-48dp" />


</androidx.constraintlayout.widget.ConstraintLayout>